{
  "$schema": ".vscode/biome.schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["src/routeTree.gen.ts"],
    "include": ["src/*", ".vscode/*", "index.html", "vite.config.js"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": ["src/components/ai-elements","src/components/ui"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
